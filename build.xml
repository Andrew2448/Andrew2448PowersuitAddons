<project name="ModularPowersuitsAddons" default="release">
	
    <property environment="env" />


	<!-- Versions -->
	<property name="build.ver" value="5" />
    <property name="fullversion" value="0.2.0-${build.ver}" />
	<property name="mpsrecommended" value="270" />
	<property name="mcp.version" value="742" />
	<property name="forgebuild" value="605" />
	<property name="forge.version" value="1.5.1-7.7.0.${forgebuild}" />


	<!-- Directories -->
    <property name="download.dir" value="downloads" />
	<property name="build.dir" value="build" />
	<property name="src.dir" value="src" />
	<property name="lib.dir" value="${src.dir}/lib" />
	<property name="mcp.dir" value="./" />
	<property name="mcpsrc.dir" value="${mcp.dir}/src/minecraft" />
	<property name="resources.dir" value="mods" />
	
	   <!-- Doing stuff -->
	<target name="clean">
		<delete dir="${mcp.dir}/reobf/minecraft" />
		<delete dir="${mcpsrc.dir}/net/machinemuse" />
		<delete dir="${build.dir}/MachineMusePowersuits" />
	</target>
	
	<target name="download MPS">
		<exec dir="${build.dir}" executable="git" osfamily="windows" failonerror="true">
			  <arg line="clone https://github.com/MachineMuse/MachineMusePowersuits.git" />
		</exec>
	</target>
		
	<target name="build">
		<copy todir="${mcpsrc.dir}/net">
		   <fileset dir="${build.dir}/MachineMusePowersuits/src/minecraft/net" />
		</copy>
		<replace dir="${mcpsrc.dir}/andrew/powersuits" token="@VERSION@" value="${fullversion}" />
	</target>
		
	<target name="recompile">
		<exec dir="${mcp.dir}" executable="cmd" osfamily="windows" failonerror="true">
		   <arg line="/c recompile.bat" />
		</exec>

		<exec dir="${mcp.dir}" executable="sh" osfamily="unix" failonerror="true">
		   <arg value="recompile.sh" />
		</exec>
	</target>
		
	<target name="reobfuscate">
		<exec dir="${mcp.dir}" executable="cmd" osfamily="windows" failonerror="true">
		   <arg value="/c reobfuscate_srg.bat" />
		</exec>
		
		<exec dir="${mcp.dir}" executable="sh" osfamily="unix" failonerror="true">
		   <arg value="reobfuscate_srg.sh" />
		</exec>
	</target>
		
	<target name="release" depends="clean, download MPS, build, recompile, reobfuscate">
		
		<mkdir dir="${build.dir}" />
		<jar destfile="${build.dir}/MPSA-${fullversion}_MPS-${mpsrecommended}.jar">
		   <fileset dir="${mcp.dir}/reobf/minecraft" includes="andrew/**" />
		   <fileset file="${mcp.dir}/mcmod.info" />
		   <fileset file="${mcp.dir}/Changelog.txt" />
		   <fileset file="${mcp.dir}/MODLICENSE.txt" />
		   <fileset dir="${mcp.dir}" includes="mods/**" />
		</jar>
		
		<antcall target="clean" />
	</target>
</project>
		
		